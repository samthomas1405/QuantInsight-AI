# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=quantinsight
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/quantinsight

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Backend Configuration
SECRET_KEY=your_very_secure_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
GOOGLE_API_KEY=your_google_api_key_here
SERPER_API_KEY=your_serper_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for development using Mailhog)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@quantinsight.com
EMAIL_USE_TLS=False

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WEBSOCKET_URL=ws://localhost:8000

# PgAdmin Configuration
PGADMIN_EMAIL=admin@quantinsight.com
PGADMIN_PASSWORD=admin_password_change_in_production

# Application Settings
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.csv,.xlsx,.txt

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour in seconds

# Session Configuration
SESSION_LIFETIME=86400  # 24 hours in seconds

# Cache Configuration
CACHE_TTL=300  # 5 minutes in seconds

# AI Model Configuration
AI_MODEL_TIMEOUT=300  # 5 minutes in seconds
AI_MAX_RETRIES=3
AI_TEMPERATURE=0.1